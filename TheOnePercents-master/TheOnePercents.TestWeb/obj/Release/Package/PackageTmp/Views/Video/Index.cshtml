@model IEnumerable<TheOnePercents.TestWeb.Models.Video>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Html5Boilerplate.cshtml";
}

@section styles
{
    <link rel="stylesheet" href="~/Content/css/video.css" />
}

<h2>Index</h2>

<div class="video-list">
    <ol>
        @foreach (var item in Model)
        {
            <li class="video-container">
                <div class="video-thumbnail" style="float: left">
                    <a href="@Url.Action("Display")/@Html.DisplayFor(modelItem => item.VideoID)"><img src="@Html.DisplayFor(modelItem => item.ThumbnailURL)" class="video-thumbnail"></a>
                </div>
                <div class="video-description-container">
                    <a href="@Url.Action("Display")/@Html.DisplayFor(modelItem => item.VideoID)"><h2 class="video-title">@Html.DisplayFor(modelItem => item.Title)</h2></a>
                        <div class="video-description">@Html.DisplayFor(modelItem => item.Description)</div>
                        <div class="video-length">Length: @Html.DisplayFor(modelItem => item.Length)</div>
                        <div class="video-published">Published On: @Html.DisplayFor(modelItem => item.PublishDate)</div>
</div>
            </li>
        }
    </ol>
</div>


<p>
    @Html.ActionLink("Create New", "Create")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.URL)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PublishDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Length)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.URL)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PublishDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Length)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.VideoID }) |
            @Html.ActionLink("Details", "Details", new { id=item.VideoID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.VideoID })
        </td>
    </tr>
}

</table>
