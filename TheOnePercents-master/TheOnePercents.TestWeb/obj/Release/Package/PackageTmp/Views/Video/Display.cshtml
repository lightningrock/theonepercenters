@model TheOnePercents.TestWeb.Models.Video

@{
    ViewBag.Title = "Display";
    Layout = "~/Views/Shared/_Html5Boilerplate.cshtml";
}

@section styles
{
    <link rel="stylesheet" href="~/Content/css/video.css" />
    <link href="~/Content/js/video-js/video-js.css" rel="stylesheet" />
}

@section scripts
{
    <script src="~/Content/js/video-js/video.js"></script>
}

<h2>@Html.DisplayFor(model => model.Title)</h2>

<video id="example_video_1" class="video-js vjs-default-skin vjs-big-play-centered"
       controls preload="auto" width="640" height="264"
       poster="@Html.DisplayFor(model => model.ThumbnailURL)"
       data-setup='{"example_option":true}'>
    <source src="@Html.DisplayFor(model => model.URL)" type='video/mp4' />
    <p class="vjs-no-js">To view this video please enable JavaScript, and consider upgrading to a web browser that <a href="http://videojs.com/html5-video-support/" target="_blank">supports HTML5 video</a></p>
</video>