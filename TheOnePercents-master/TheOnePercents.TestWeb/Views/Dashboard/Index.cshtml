@model IEnumerable<TheOnePercents.TestWeb.Models.UserTasks>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Html5Boilerplate.cshtml";
}

@section styles
{
<link href="~/Content/js/jquery-ui/jquery-ui.css" rel="stylesheet" type="text/css" />
<link rel="stylesheet" href="~/Content/js/fullcalendar-2.3.1/fullcalendar.css" />
}

@section scripts
{
<!-- include calendar -->
<script src="~/Content/js/jquery-1.10.2.min.js"></script>
<script src="~/Content/js/jquery-ui/jquery-ui.min.js"></script>
<script src="~/Content/js/fullcalendar-2.3.1/lib/moment.min.js"></script>
<script src="~/Content/js/fullcalendar-2.3.1/fullcalendar.js"></script>
<script src="~/Content/js/DashboardCalendar.js"></script>
}

<h2>Index</h2>
<div style="width: 100%; overflow: hidden;">    
    <div style="width:800px; margin-left: auto; margin-right:auto;">
        <div id="calendar"></div>
        <div id="dialog-form" title="Add Task">
            <div id="tasks"></div>
        </div>
        <div style="width: 200px;float: left; margin-left: auto; margin-right: auto; border: solid 1px red;">
            <h2>Stats</h2>
            <p id="TaskPoints">0 points</p>
            <p>etc</p>
        </div>
    </div>
</div>

